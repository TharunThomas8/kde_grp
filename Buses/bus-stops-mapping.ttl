@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix geo: <http://www.opengis.net/ont/geosparql#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex: <http://data.example.org/ont#> .
@prefix sch: <https://schema.org/address#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

<#Bus>
	a rr:TriplesMap ;
	
	rr:logicalTable [ rr:tableName "routes_trips_stops_combined1" ] ;
	
	rr:subjectMap [
		rr:template "http://data.example.org/bus/{ROUTE_SHORT_NAME}" ;
		rr:class ex:Bus ;
	] ;
	
	rr:predicateObjectMap [
		rr:predicate ex:hasTrip ;
		rr:objectMap [
			rr:parentTriplesMap <#Trips> ;
			rr:joinCondition [
				rr:child "TRIP_ID";
				rr:parent "TRIP_ID";
			] 
        ] ;
	] ;
	.

<#Trips>

	a rr:TriplesMap ;
	
	rr:logicalTable [ rr:tableName "routes_trips_stops_combined1" ] ;
	
	rr:subjectMap [
		rr:template "http://data.example.org/bus/{ROUTE_SHORT_NAME}/{DIRECTION_ID}" ;
		rr:class ex:BusTrip ;
	] ;

	rr:predicateObjectMap [
		rr:predicate ex:tripID ;
		rr:objectMap [
             rr:column "TRIP_ID" ;
			 rr:datatype xsd:string ;
        ] ;
	] ;

	rr:predicateObjectMap [
		rr:predicate ex:stopSequenceNumber ;
		rr:objectMap [
			rr:parentTriplesMap <#SequenceNumber> ;
			rr:joinCondition [
				rr:child "TRIP_ID";
				rr:parent "TRIP_ID";
			] 
        ] ;
	] ;
	.

<#SequenceNumber>

	a rr:TriplesMap ;
	
	rr:logicalTable [ rr:tableName "routes_trips_stops_combined1" ] ;
	
	rr:subjectMap [
		rr:template "http://data.example.org/bus/{ROUTE_SHORT_NAME}/{DIRECTION_ID}/{STOP_SEQUENCE}" ;
		rr:class ex:SequenceNumber ;
	] ;

	rr:predicateObjectMap [
		rr:predicate foaf:Name ;
		rr:objectMap [
			rr:column "STOP_SEQUENCE";
			rr:datatype xsd:string ; 
		] ;
	] ;

	rr:predicateObjectMap [
		rr:predicate ex:hasStop ;
		rr:objectMap [
			rr:parentTriplesMap <#BusStop> ;
			rr:joinCondition [
				rr:child "STOP_ID";
				rr:parent "STOP_ID";
			] 
        ] ;
	] ;
	.



<#BusStop>

	a rr:TriplesMap ;
	
	rr:logicalTable [ rr:tableName "routes_trips_stops_combined1" ] ;
	
	rr:subjectMap [
		rr:template "http://data.example.org/stop/{STOP_ID}" ;
		rr:class ex:Stop ;
	] ;

	rr:predicateObjectMap [
		rr:predicate foaf:Name ;
		rr:objectMap [
			rr:column "STOP_NAME";
			rr:datatype xsd:string ; 
		] ;
	] ;

	rr:predicateObjectMap [
		rr:predicate ex:hasLocation ;
		rr:objectMap [
			rr:parentTriplesMap <#Geolocation> ;
			rr:joinCondition [
				rr:child "STOP_ID";
				rr:parent "STOP_ID";
			] 
        ] ;
	] ;

	rr:predicateObjectMap [
		rr:predicate ex:isStopOf ;
		rr:objectMap [
			rr:parentTriplesMap <#Trips> ;
			rr:joinCondition [
				rr:child "TRIP_ID";
				rr:parent "TRIP_ID";
			] 
        ] ;
	] ;
	
	
	.

	<#Geolocation>

	a rr:TriplesMap ;
	
	rr:logicalTable [ rr:tableName "routes_trips_stops_combined1" ] ;
	
	rr:subjectMap [
		rr:template "http://data.example.org/stop/{STOP_ID}/loc" ;
		rr:class ex:location ;
	] ;

	rr:predicateObjectMap [
		rr:predicate geo:hasGeometry ;
		rr:objectMap [
			 rr:template "POINT({STOP_LAT} {STOP_LON})" ;
			 rr:datatype geo:wktLiteral ; 
        ] ;
	] ;

	rr:predicateObjectMap [
		rr:predicate ex:isLocationOf ;
		rr:objectMap [
			rr:parentTriplesMap <#BusStop> ;
			rr:joinCondition [
				rr:child "STOP_ID";
				rr:parent "STOP_ID";
			] 
        ] ;
	] ;
	
	.